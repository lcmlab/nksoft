
<% #debugger %>

<%
=begin
%>

<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <u1 class="error_summary">
    <% @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </u1>
  <% end %> 


<%
=end
%>



<h2><%= @employee.name %>さんの状況更新</h2>


<table class="attr">
<tr>
  <th><%= form.label :state_id %></th>
  <td><%= form.collection_select(:state_id, @states, :id, :stname) %></td>
</tr>
<tr>
  <th><%= form.label :location %></th>
  <td><%= form.text_field :location, { :size => 15, :maxlength => 30 } %></td>
</tr>
<tr>
  <th><%= form.label :memo %></th>
  <td><%= form.text_field :memo, { :size => 50, :maxlength => 100 } %></td>
</tr>

</table>


<%
=begin
%>


<p>
  <%= form.submit %>
</p>
<% end %>


<%
=end
%>
