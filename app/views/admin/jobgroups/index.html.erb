<% @page_title = "業務区分一覧" %>
<h1><%= @page_title %></h1>


<%
=begin
%>

<%= form_tag :search_jobgroups, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<%
=end
%>


<p><%= link_to "業務区分の新規登録", :new_admin_jobgroup %></p>

<% if @jobgroups.present? %>
<table class="list">
   <tr>
      <th>&nbsp;&nbsp;業務区分名称</th>
      <th>&nbsp;&nbsp;操　作</th>
   </tr>
   <% @jobgroups.each do |jobgroup| %>
   <tr>
      <td><%= jobgroup.jgname %></td>
      <td>
         <%= link_to "編集", [:edit, :admin, jobgroup] %>
         <%= link_to "削除", [:admin, jobgroup], method: :delete,
               confirm: "本当に削除しますか？" %>
      </td>
   </tr>
   <% end %>
</table>
<%= will_paginate @jobgroups %>

<% else %>
<p>業務区分情報がありません。</p>
<% end %>
