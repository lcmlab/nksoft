<% @page_title = "所属組織一覧" %>
<h1><%= @page_title %></h1>


<%
=begin
%>

<%= form_tag :search_departments, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<%
=end
%>


<p><%= link_to "所属組織の新規登録", :new_admin_department %></p>

<% if @departments.present? %>
<table class="list">
   <tr>
      <th>&nbsp;&nbsp;部門名称</th>
      <th>&nbsp;&nbsp;操　作</th>
   </tr>
   <% @departments.each do |department| %>
   <tr>
      <td><%= department.dpname %></td>
      <td>
         <%= link_to "編集", [:edit, :admin, department] %>
         <%= link_to "削除", [:admin, department], method: :delete,
               confirm: "本当に削除しますか？" %>
      </td>
   </tr>
   <% end %>
</table>
<%= will_paginate @departments %>

<% else %>
<p>所属組織情報がありません。</p>
<% end %>
