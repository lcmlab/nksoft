<% @page_title = "顧客一覧" %>
<h1><%= @page_title %></h1>


<%
=begin
%>

<%= form_tag :search_clients, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<%
=end
%>


<p><%= link_to "顧客の新規登録", :new_admin_client %></p>

<% if @clients.present? %>
<table class="list">
   <tr>
      <th>&nbsp;&nbsp;顧客名称</th>
      <th>&nbsp;&nbsp;操　作</th>
   </tr>
   <% @clients.each do |client| %>
   <tr>
      <td><%= client.clientname %></td>
      <td>
         <%= link_to "編集", [:edit, :admin, client] %>
         <%= link_to "削除", [:admin, client], method: :delete,
               confirm: "本当に削除しますか？" %>
      </td>
   </tr>
   <% end %>
</table>
<%= will_paginate @clients %>

<% else %>
<p>顧客情報がありません。</p>
<% end %>
